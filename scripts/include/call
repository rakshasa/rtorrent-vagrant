#!/bin/bash

source ./scripts/include/nodes

DEBUG=1

CLIENT="./scripts/xmlrpc2scgi.py"

call_rpc() {
    NODE_URL="scgi://`cat ./data/${NODE}/metadata/ipv4.address`:5001"
    #NODE_URL="scgi://[`cat ./data/${NODE}/metadata/ipv6.address`]:5001"

    CALL_CMD="$CLIENT -s $NODE_URL $@"

    echo $CALL_CMD

    $CALL_CMD | awk -f ./scripts/include/${AWK_FILE}.awk
}

call_rpc_nodes() {
    for NODE in ${NODES[@]}; do
        echo "${NODE}:"
        call_rpc $@
    done
}
