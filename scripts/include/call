#!/bin/bash

DEBUG=1

SCRIPT_DIR=`dirname $( dirname ${BASH_SOURCE[0]} )`
DATA_DIR="${SCRIPT_DIR}/../data/"

TORRENT_VM_DIR="/data/torrents/"
TORRENT_SHARED_DIR="${DATA_DIR}/shared/torrents/"

NODES=(`ls ${DATA_DIR} | grep "^node"`)
CLIENT="${SCRIPT_DIR}/xmlrpc2scgi.py"

GIT_RTORRENT="${DATA_DIR}/builder/rtorrent/"
GIT_LIBTORRENT="${DATA_DIR}/builder/libtorrent/"

call_ssh_nodes() {
    for NODE in ${NODES[@]}; do
        echo "${NODE}:"
        ${SCRIPT_DIR}/ssh $NODE $@
    done
}

call_ssh_nodes_p() {
    printf '%s\n' ${NODES[@]} | xargs -n 1 -P 8 -I{} ${SCRIPT_DIR}/ssh {} $@
}

call_rpc() {
    FORWARD_PORT=`cat ${DATA_DIR}/${NODE}/metadata/forward.5001`

    if [ -z ${FORWARD_PORT} ]; then
        echo "Could not find forward port for ${NODE}"
        exit -1
    fi

    NODE_URL="scgi://localhost:${FORWARD_PORT}"
    CALL_CMD="$CLIENT -s $NODE_URL $@"

    #echo $CALL_CMD
    $CALL_CMD | awk -f ${SCRIPT_DIR}/include/${AWK_FILE}.awk
}

call_rpc_nodes() {
    for NODE in ${NODES[@]}; do
        echo "${NODE}:"
        call_rpc $@
    done
}
